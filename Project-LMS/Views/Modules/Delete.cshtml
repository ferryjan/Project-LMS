@model Project_LMS.Models.Module

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Module</h2>

<h3>Are you sure you want to delete this module?</h3>
<div>
    <h4>Module</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>


    @if (ViewBag.VerifyComfirmed == "Yes")
    {
        if (ViewBag.IsEmpty == "No")
        {
            <h3 style="color:red">Warning! There are some documents and/or activities stored in this module, they will also be deleted while you delete this module!</h3>
        }
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        }
    }

    else if (ViewBag.VerifyComfirmed == "No")
    {
        if (ViewBag.IsEmpty == "No")
        {
            <h3 style="color:red">Warning! There are some documents and/or activities stored in this module, they will also be deleted while you delete this module!</h3>

            <div>
                <button onclick="OpenDialog()" class="btn btn-primary">
                    Verify Your Identity First Please!
                </button>
            </div>

            <div id="Dialog-Box">
                <p>Email:</p>
                <input type="text" autocomplete="nope" id="Dialog-Email" />
                <p>Password:</p>
                <input type="password" autocomplete="new-password" id="Dialog-Password" />
                <br />
                <input type="submit" onclick="verify()" value="verify" class="btn btn-primary" />
            </div>

            <h5 id="currentCourseId" style="display:none">@ViewBag.CourseID</h5>
            <h6 id="currentModuleId" style="display:none">@Model.ModuleId</h6>
        }
        else
        {
            using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            }
        }
    }

    <br />
    @Html.ActionLink("Cancel and Go Back", "Edit", "TeacherCourses", new { id = ViewBag.CourseId }, new { @class = "btn btn-primary btn-large" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" type="text/css" />

    <script type="text/javascript">
        $(".ui-widget-overlay").attr('style', 'background-color: #000; opacity:1; z-index:1000;');

        $('#Dialog-Box').dialog({
            autoOpen: false,
            height: 300,
            width: 300,
            modal: true
        });

        function OpenDialog() {
            $('#Dialog-Email').val();
            $('#Dialog-Password').val();
            $('#Dialog-Box').dialog('open');
        }

        function verify() {
            $('#Dialog-Box').hide;
        $.ajax({
            url: '@Url.Action("VerifyUserModule", "Account")',
            type: 'POST',
            data: {
                email: $('#Dialog-Email').val(),
                password: $('#Dialog-Password').val(),
                courseid: $("h5").text(),
                moduleid: $("h6").text()
            },
            success: function (msg) {
                window.location.href
                    = msg.redirectUrl;
            },
            error: function (msg) {
            }
        });

    }
    </script>
}