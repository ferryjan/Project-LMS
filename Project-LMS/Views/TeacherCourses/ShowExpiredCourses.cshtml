@model IEnumerable<Project_LMS.Models.Course>

@{
                /**/

                ViewBag.Title = "Expired Courses";
}

<h2>Expired Courses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CourseName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EndDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CourseDescription)
    </td>
    <td>
        <a href="@Url.Action("Details", "TeacherCourses", new { id = item.CourseId })" class="btn btn-info">
            <i class="glyphicon glyphicon-list"></i>
            <span>
                <strong>Details</strong>
            </span>
        </a>
        <a href="@Url.Action("Delete", "TeacherCourses", new { id = item.CourseId })" class="btn btn-danger">
            <i class="glyphicon glyphicon-erase"></i>
            <span>
                <strong>Delete</strong>
            </span>
        </a>
    </td>
</tr>
}

</table>

@Html.ActionLink("Back To Courses Overview", "Index", null, new { @class = "btn btn-primary btn-large" })
