@model Project_LMS.Models.Document

@{
    /**/

    /**/

    ViewBag.Title = "Upload Activity Document";
}

<h2>Upload document to activity</h2>

@using (Html.BeginForm("CreateActivityDocument", "Documents", new { id = ViewBag.ActivityId }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    <h4 style="color:indianred"> @ViewBag.NoFileSelectedMsg </h4>
    <div class="editor-field">
        <div><input type="file" accept=".xlsx,.xls, .doc, .docx,.ppt, .pptx,.txt,.pdf" name="Document" /></div>
    </div>

    <br />
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <br />


    <input type="submit" value="Save" class="btn btn-primary" />

    @Html.ActionLink("Cancel and Go Back", "Edit", "Activities", new { id = ViewBag.ActivityId }, new { @class = "btn btn-primary btn-large" })
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
