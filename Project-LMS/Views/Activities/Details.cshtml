@model Project_LMS.Models.Activity

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Activity</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>Course:</dt>
        <dd>@ViewBag.CourseName</dd>

        <dt>Module:</dt>
        <dd>@ViewBag.ModuleName</dd>

        <dt>@Html.DisplayNameFor(model => model.ActivityType.Type)</dt>
        <dd>@Html.DisplayFor(model => model.ActivityType.Type)</dd>

        <dt>@Html.DisplayNameFor(model => model.ActivityName)</dt>
        <dd>@Html.DisplayFor(model => model.ActivityName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Start)</dt>
        <dd>@Html.DisplayFor(model => model.Start)</dd>

        <dt>@Html.DisplayNameFor(model => model.End)</dt>
        <dd>@Html.DisplayFor(model => model.End)</dd>

        <dt>@Html.DisplayNameFor(model => model.Description)</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>

    </dl>
</div>

@if (User.IsInRole("Teacher"))
{
    <p>
        @Html.ActionLink("Edit", "Edit", "Activities", new { id = Model.ActivityId }, new { @class = "btn btn-primary btn-large" })
        @Html.ActionLink("Back to Modules", "Edit", "Modules", new { id = Model.ModuleId }, new { @class = "btn btn-primary btn-large" })
    </p>
}
else if (User.IsInRole("Student"))
{
    @Html.ActionLink("Back to Start Page", "StudentStart", "StudentCourses", null, new { @class = "btn btn-primary btn-large" })
}

