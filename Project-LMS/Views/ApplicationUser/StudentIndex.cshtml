@model IEnumerable<Project_LMS.Models.ApplicationUser>

<p>
    @Html.ActionLink("Add New Student to The Course", "CreateStudent", new { id = ViewBag.CourseId }, new { @class = "btn btn-primary btn-large" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GivenName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FamilyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GivenName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FamilyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href="@Url.Action("DeleteStudentFromCourse", "ApplicationUser", new {id = ViewBag.CourseId, studnetId = item.Id })" class="btn btn-danger">
                <i class="glyphicon glyphicon-erase"></i>
                <span>
                    <strong>Remove Student</strong>
                </span>
            </a>
        </td>
    </tr>
}

</table>
