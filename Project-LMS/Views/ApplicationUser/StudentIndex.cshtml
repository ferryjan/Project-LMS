@model IEnumerable<Project_LMS.Models.ApplicationUser>

<p>
    @Html.ActionLink("Add New Student to The Course", "CreateStudent", new { id = ViewBag.CourseId }, new { @class = "btn btn-primary btn-large" })
</p>

<style>
    .table > thead > tr > th,
    .table > tbody > tr > th,
    .table > tfoot > tr > th,
    .table > thead > tr > td,
    .table > tbody > tr > td,
    .table > tfoot > tr > td {
        padding: 0px 0px;
    }
</style>

@if (Model.Count() != 0)
{
    <div class="bodycontainer scrollable">
        <table class="table">
            <tr>
                <th class="col-md-1"></th>
                <th class="col-md-2">@Html.DisplayNameFor(model => model.GivenName)</th>
                <th class="col-md-2">@Html.DisplayNameFor(model => model.FamilyName)</th>
                <th class="col-md-2">@Html.DisplayNameFor(model => model.Email) </th>
                <th class="col-md-5"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-md-1">
                        @if (item.ProfileImageRef != "")
                        {<img alt="" src="~/Pictures/@item.ProfileImageRef" data-radium="true" style="width: 48px; height: 48px; border-radius: 00%">}
                        else
                        {<img alt="" src="~/Pictures/defaultavatar.png" data-radium="true" style="width: 48px; height: 48px; border-radius: 00%">}
                    </td>
                    <td class="col-md-2"> @Html.DisplayFor(modelItem => item.GivenName)</td>
                    <td class="col-md-2"> @Html.DisplayFor(modelItem => item.FamilyName)</td>
                    <td class="col-md-2"> @Html.DisplayFor(modelItem => item.Email)</td>

                    <td class="col-md-5" style="text-align:center">
                        <div class="btn-group-sm">
                            <a href="@Url.Action("DeleteStudentFromCourse", "ApplicationUser", new { id = ViewBag.CourseId, studnetId = item.Id })" class="btn btn-danger">
                                <i class="glyphicon glyphicon-erase"></i>
                                <span><strong>Remove Student</strong></span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <h3 style="color:crimson">No student has been added to this course!</h3>
}
