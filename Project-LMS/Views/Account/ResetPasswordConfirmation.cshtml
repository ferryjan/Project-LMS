</hgroup>
<div>
    @if (User.IsInRole("Teacher"))
    {
        <p>
            Your password has been reset. Please @Html.ActionLink("Click here to go the homepage", "Index", "TeacherCourses", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </p>
    }
    else
    {
        <p>
            Your password has been reset. Please @Html.ActionLink("Click here to go the homepage", "Index", "TeacherCourses", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </p>
